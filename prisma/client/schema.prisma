datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
  output   = "./prisma/client"
}

model Product {
  id    Int      @id @default(autoincrement())
  name  String
  price Float
  image String?
  type  String?
  orders OrderProducts[]  // Adicione esta linha
 }

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     String
}


model Order {
  id            Int       @id @default(autoincrement())
  userId        Int
  client        String
  status        OrderStatus
  dateEntry     DateTime
  dateProcessed DateTime?
  products      OrderProducts[]  // Adicione esta linha
}

enum OrderStatus {
  Pendente
  Processando
  Concluido
}

model OrderProducts {
  id         Int       @id @default(autoincrement())
  orderId    Int
  productId  Int
  quantity   Int
  order      Order     @relation(fields: [orderId], references: [id])
  product    Product   @relation(fields: [productId], references: [id])
}
